@model SacramentMeetingPlanner.Models.SacramentMeeting

@{
    ViewData["Title"] = "Edit";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<h1>Edit</h1>

<h4>SacramentMeeting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
             <div class="form-group">
                <label asp-for="SacramentMeetingDate" class="control-label"></label>
                <input asp-for="SacramentMeetingDate" class="form-control" />
                <span asp-validation-for="SacramentMeetingDate" class="text-danger"></span>
            </div>
            <div class="form-group" id="event-list">
                @foreach(var value in Model.EventList)
                { //If statement goes here, check if event is Hymn or not.
                    <div id=@value.EventId class="form-group event">
                        <input id="type" name="EventList[@(value.EventId)].EventType" value=@value.EventTypeId />
                        <input id="value@(value.EventId)" name=EventList[@(value.EventId)].EventDetails value=@value.RowId />
                        <input type="hidden" name="EventList[@value.EventId].localId" value="0"/>
                        <input type="hidden" name="EventList[@value.EventId].Id" value="@value.EventId"/>
                        <a href="#" id="remove">Remove</a>
                    </div>
                }
            </div>
            <a href="#" id="add">Add</a><br>
            <input type="submit" value="Edit" class="btn btn-default" />
        </form>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#add").click(function (event) {
            event.preventDefault();
            var i = $("#event-list").children().length;
            var eventSelect = `
                <div id=${i} class="form-group event">
                    <select id="event-type" name="EventList[${i}].EventType"/>
                        <option>Speaker</option>
                        <option>Hymn</option>
                        <option>Prayer</option>
                        <option>Person</option>
                    </select>
                    <input name="EventList[${i}].EventDetails"/>
                    <input name="EventList[${i}].FirstName"/>
                    <input name="EventList[${i}].LastName"/>
                    <input name="EventList[${i}].Topic"/>
                    <a href="#" id="remove">Remove</a>
                </div>`;
            $("#event-list").append(eventSelect);
        });

        $("#event-list").on("click", "#remove", function() {
            var removalId = this.parentNode.id;
            var children = $("#event-list").children()

            children.each( function() {
                if (this.id > removalId) {
                    this.id = this.id - 1
                    this.children[0].name = `EventList[${this.id}].EventType`
                    this.children[1].name = `EventList[${this.id}].EventDetails`
                    this.children[2].name = `EventList[${this.id}].FirstName`
                    this.children[3].name = `EventList[${this.id}].LastName`
                    this.children[4].name = `EventList[${this.id}].Topic`
                }
            })
            children[removalId].remove()
        });

        $("#event-list").on("change", "#event-type", function() {
            i = this.parentNode.id;
            var element = document.createElement(`select`)
            element.name = `EventList[${i}].Hymn`
            appendString = `
                        <option value="1">Song 1</option>
                        <option value="2">thing</option>
                        <option value="3">other thing</option>
                        <option value="4">Another song</option>
                        <option value="5">song go here</option>`
            element.innerHTML = appendString
            if (this.value === "Hymn") {
            
                removeButton = this.parentNode.children[5]
                for(var i = 0 ; i < 4; i++)
                {
                     this.parentNode.children[2].remove();
                }
                this.parentNode.appendChild(element);
                this.parentNode.appendChild(removeButton);

            }
            else if (this.parentNode.children.length !== 6) {
                var element1 = document.createElement("input");
                element1.name = `EventList[${i}].FirstName`
                var element2 = document.createElement("input");
                element2.name = `EventList[${i}].LastName`
                var element3 = document.createElement("input");
                element3.name = `EventList[${i}].Topic`
                removeButton = this.parentNode.children[3]

                for (var i = 0; i < 2; i++) {
                    this.parentNode.children[2].remove();
                }
                this.parentNode.appendChild(element1)
                this.parentNode.appendChild(element2)
                this.parentNode.appendChild(element3)
                this.parentNode.appendChild(removeButton)
                
            }
        })
    });
</script>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
