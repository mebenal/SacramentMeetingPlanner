@model SacramentMeetingPlanner.Models.SacramentMeeting

@{
    ViewData["Title"] = "Edit";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<h1>Edit</h1>

<h4>SacramentMeeting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
             <div class="form-group">
                <label asp-for="SacramentMeetingDate" class="control-label"></label>
                <input asp-for="SacramentMeetingDate" class="form-control" />
                <span asp-validation-for="SacramentMeetingDate" class="text-danger"></span>
            </div>
            <div class="form-group" id="event-list">
                @foreach(var value in Model.EventList)
                {
                    <div id=@value.EventId class="form-group event">
                        <input id="type" name="EventList[@(value.EventId)].EventType" value=@value.EventTypeId />
                        <input id="value@(value.EventId)" name=EventList[@(value.EventId)].EventDetails value=@value.RowId />
                        <input type="hidden" name="EventList[@value.EventId].localId" value="0"/>
                        <input type="hidden" name="EventList[@value.EventId].Id" value="@value.EventId"/>
                        <a href="#" id="remove">Remove</a>
                    </div>
                }
            </div>
            <a href="#" id="add">Add</a><br>
            <input type="submit" value="Edit" class="btn btn-default" />
        </form>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#add").click(function (event) {
            event.preventDefault();
            var i = $("#event-list").children().length;
            var eventSelect = `
                <div id=${i} class="form-group event">
                    <input id="type" name="EventList[${i}].EventType"/>
                    <input id="value${i}" name="EventList[${i}].keyValuePairs.Value"/>
                    <input type="hidden" name="EventList[${i}].id" value="0"/>
                    <a href="#" id="remove">Remove</a>
                </div>`;
            $("#event-list").append(eventSelect);
        });

        $("#event-list").on("click", "#remove", function() {
            var removalId = this.parentNode.id;
            var children = $("#event-list").children()

            children.each( function() {
                console.log("I am printing here")
                if (this.id > removalId)
                {
                    this.id = this.id - 1
                    this.children[0].name = `EventList[${this.id}].EventType`
                    this.children[1].name = `EventList[${this.id}].EventType[]`
                    this.children[1].id = `value${this.id}`
                    
                }
            })
            children[removalId].remove()
        });

        $("#event-list").on("input", "#type", function() {
            var inputValue = this.value
            var currentId = this.parentNode.id

            $("#event-list").find(`#key${currentId}`).attr("value", `EventList[${currentId}].EventType[${inputValue}]`)
            
        })
    })
</script>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
