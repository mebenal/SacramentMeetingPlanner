@model SacramentMeetingPlanner.Models.SacramentMeeting

@{
    ViewData["Title"] = "Edit";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<h1>Edit</h1>

<h4>SacramentMeeting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
             <div class="form-group">
                <label asp-for="SacramentDate" class="control-label"></label>
                <input asp-for="SacramentDate" class="form-control" />
                <span asp-validation-for="SacramentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Presiding" class="control-label"></label>
                <input asp-for="Presiding" class="form-control" />
                <span asp-validation-for="Presiding" class="text-danger"></span>
            </div>
            <table class="eventTable">
                <thead>
                    <tr class="eventItems">
                        <td><label class="control-label">Event</label></td>
                        <td><label class="control-label">Details</label></td>
                    </tr>
                </thead>
                <tbody class="form-group" id="event-list">
                @{
                    var list = Model.EventList.ToList();
                    list = list.OrderBy(i => i.localId).ToList();
                    foreach(var value in list)
                    {
                        <tr id=@value.localId class="form-group event eventItems">
                            <td><input id="type" class="form-control" name="EventList[@(value.localId)].EventType" value="@(value.EventType)" /></td>
                            <td><input id="value@(value.localId)" class="form-control" name=EventList[@(value.localId)].EventDetails value="@(value.EventDetails)" /></td>
                            <input type="hidden" name="EventList[@value.localId].localId" value=@value.localId />
                            <input type="hidden" name="EventList[@value.localId].Id" value="@value.Id"/>
                            <td><a href="#" id="remove">Remove</a></td>
                        </tr>
                    }
                }
                </tbody>
            </table>
            <a href="#" id="add">Add</a><br>
            <input type="submit" value="Edit" class="btn btn-default" />
        </form>
    </div>
</div>
<script type="text/javascript">
   $(function () {
        $("#add").click(function (event) {
            event.preventDefault();
            var i = $("#event-list").children().length;
            var eventSelect = `
                <tr id=${i} class="form-group event eventItems">
                    <td><input id="type" class="form-control" name="EventList[${i}].EventType"/></td>
                    <td><input id="details" class="form-control" name="EventList[${i}].EventDetails"/></td>
                    <input type="hidden" name="EventList[${i}].localId" value="${i}"/>
                    <td><a href="#" id="remove">Remove</a></td>
                </tr>`;
            $("#event-list").append(eventSelect);
        });

        $("#event-list").on("click", "#remove", function() {
            var removalId = this.parentNode.parentNode.id;
            var children = $("#event-list").children()

            children.each( function() {
                console.log("I am printing here")
                if (this.id > removalId)
                {
                    this.id = this.id - 1
                    this.children[0].name = `EventList[${this.id}].EventType`
                    this.children[1].name = `EventList[${this.id}].EventDetails`
                    this.children[2].name = `EventList[${this.id}].localId`
                    this.children[2].value = `${this.id}`
                    this.children[3].name = `EventList[${this.id}].Id`
                }
            })
            children[removalId].remove()
        })
    })
</script>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
